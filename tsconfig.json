{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "dom"],

    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "ts-vue-plugin" }],
    "types": [ "vue-typescript-import-dts", "node" ],

    "outDir": "./build-ts/",
    "jsx": "react",
    "allowJs": true,

    "resolveJsonModule": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [ "./source/*" ],
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "source"
  ]
}
